<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nicol.joynus.EventDescriptionActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:id="@+id/event_description_title_textView"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/event_description_address_textView"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exemple"
        android:textSize="18sp"
        android:id="@+id/event_description_date_textView"
        android:gravity="center"
        android:textStyle="bold"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/event_description_see_map_button"
        android:text="@string/event_description_see_map"
        android:textSize="20sp"
        android:textColor="@color/joynusGold"
        android:background="@color/joynusBlue"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exemple"
        android:textSize="16sp"
        android:id="@+id/event_description_description_textView"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>
    <GridView
        android:id="@+id/event_description_categories_gridView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:columnWidth="90dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/event_description_usersImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:src="@drawable/usersicon"

            />

        <TextView
            android:id="@+id/event_description_participants_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/joynusBlue"
            android:gravity="start"
            android:textColor="@color/joynusGold"
            android:textSize="22sp"
            android:text="3 utilisateurs participent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/event_description_userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:src="@drawable/usericon"

            />

        <TextView
            android:id="@+id/event_description_creator_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/joynusBlue"
            android:gravity="start"
            android:textColor="@color/joynusGold"
            android:textSize="22sp"
            android:text="Créé par Nicolas Bauthier"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/event_description_facebook_event"
            android:id="@+id/event_description_facebook_button"
            android:background="@color/joynusBlue"
            android:textColor="@color/joynusGold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            style="?android:attr/borderlessButtonStyle"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_description_creator_profile_button"
            android:text="@string/event_description_creator_profile"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@color/joynusBlue"
            android:textColor="@color/joynusGold"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_description_subscribe_button"
            android:text="@string/event_description_unsubscribe"
            android:background="@color/joynusBlue"
            android:textColor="@color/joynusGold"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            style="?android:attr/borderlessButtonStyle"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_description_deleteEvent_Button"
            android:text="@string/event_description_delete_event"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@color/joynusBlue"
            android:textColor="@color/joynusGold"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>



</LinearLayout>
